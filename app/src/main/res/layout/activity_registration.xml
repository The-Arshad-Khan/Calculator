<?xml version="1.0" encoding="UTF-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Registration"
    android:background="@color/orange"
    android:orientation="vertical"
    android:padding="@dimen/_15sdp">

    <LinearLayout
        android:layout_width="353dp"
        android:layout_height="wrap_content"
        android:gravity="top">

        <ImageButton
            android:id="@+id/backbtn_reg"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:background="@color/orange"
            android:contentDescription="back button"
            android:src="@drawable/baseline_arrow_back_ios_24"></ImageButton>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="@dimen/_10sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="Hello! Register to Get Started"
            android:textColor="@color/black"
            android:textSize="@dimen/_35sdp"
            android:textStyle="bold"
            android:typeface="sans"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/pngwing"
            app:civ_border_color="#988E8E"
            app:civ_border_width="2dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_9sdp"/>

        <EditText
            android:id="@+id/edtusername_reg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/inputbox"
            android:gravity="center"
            android:hint="Username"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:inputType="textPersonName"
            android:padding="@dimen/_5sdp"></EditText>

        <EditText
            android:id="@+id/edtemail_reg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/inputbox"
            android:gravity="center"
            android:hint="E-mail"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:inputType="textEmailAddress"
            android:padding="@dimen/_5sdp"></EditText>

        <EditText
            android:id="@+id/edtpassword_reg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/inputbox"
            android:gravity="center"
            android:hint="Password"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:inputType="textPassword"
            android:padding="@dimen/_5sdp"></EditText>

        <EditText
            android:id="@+id/edtc_password_reg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/inputbox"
            android:gravity="center"
            android:hint="Confirm Password"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:inputType="textPassword"
            android:padding="@dimen/_5sdp"></EditText>

    </LinearLayout>

    <Button
        android:id="@+id/registerbtn"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="@dimen/_20sdp"
        android:backgroundTint="@color/black"
        android:text="@string/register"
        android:textColor="@color/white"></Button>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_15sdp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Already have an account?"
        android:textColor="@color/white"
        android:textSize="@dimen/_15sdp"></TextView>

    <TextView
        android:id="@+id/txtloginnow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=" Login Now"
        android:textSize="@dimen/_15sdp"
        android:textColor="@color/black"
        android:layout_marginLeft="@dimen/_5sdp"
        android:textStyle="bold">
    </TextView>

</LinearLayout>




</LinearLayout>

